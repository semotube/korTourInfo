/* pages/search/detail/detail.wxss */
@import "/wxParse/wxParse.wxss";

page {
	padding-top: 100rpx;
	background-color: white;
}

.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
}

.basis-1 {
	flex-basis: 10%;
}
.basis-9 {
	flex-basis: 90%;
}

.cu-tag.badge {
	border-radius: 200rpx;
	position: absolute;
	top: 10rpx;
	right: 30rpx;
	font-size: 20rpx;
	padding: 0rpx 10rpx;
	height: 28rpx;
	color: var(--white);
}

.noImage {
	width: 100%;
	height: 100%;
	font-size: 120rpx; 
	border: 1rpx solid rgba(0, 0, 0, 0.1);
}